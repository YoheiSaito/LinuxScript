#!/bin/bash

. trash-path

rmdirectory(){
	filename=`echo $@ | awk -F "/" '{ print $NF }'`
	tmpf=/tmp/${filename}_`date +"%Y-%m.%d-%H:%M.%S"`d
	# echo $filename
	echo -e  $tmpf 
	pushd $filename/../ > /dev/null
	mkdir $tmpf
	# write log
	pwd      > $tmpf/.recover-dir.log
	date +%s > $tmpf/.removedate.log
	mv $filename $tmpf
	if [ ! -e $trash ]; then
	 	mkdir $trash
	fi
	mv $tmpf $trash 
	popd > /dev/null
}

rmfile(){
	filename=`echo $@ | awk -F "/" '{ print $NF }'`
	fname=/tmp/${filename}_`date +"%Y-%m.%d-%H:%M.%S"`
	echo $fname
	mkdir $fname
	mv $@ $fname || rmdir $fname
	echo `pwd` > $fname/.recover-dir.log
	echo `date +%s` > $fname/.removedate.log
	if [ ! -e $trash ]; then
		mkdir $trash
	fi
	mv $fname $trash/ 
}

main (){
while [ "$1" != "" ]
	do
		if [ -d $1 ] ; then
			rmdirectory $1
		else 
			rmfile $1
		fi
		shift
	done
}

main $@
