#!/bin/bash
. trash-path
remove(){
	pushd $trash > /dev/null
	while [ -e $1/.recover-dir.log ]; do
		echo $1
		echo ====file contents====
		echo
		ls -aR $1 | grep -v -e .recover-dir.log -e .removedate \
			-e "^\.\.$" -e "^\.$" | sed $(echo -e s/$1\\\///g) 
		echo
		echo =====================
		echo 
		echo "remove this file (y/n)"
		cfm=""
		read cfm
		if [ "$cfm" == "y" ];then
			rm -rf $1/* $1
		fi
		shift
	done
	popd > /dev/null
}
remove `ls -a $trash/ | grep :`
